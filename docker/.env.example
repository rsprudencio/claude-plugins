# Jarvis Docker Configuration
# Copy to .env and adjust values before running docker compose

# REQUIRED: Path to your Obsidian vault on the host
JARVIS_VAULT_PATH=/path/to/your/obsidian/vault

# Jarvis config directory on the host (default: ~/.jarvis)
JARVIS_HOME=~/.jarvis

# Optional: Todoist API token (enables todoist MCP server on port 8742)
# Get your token at https://app.todoist.com/app/settings/integrations/developer
TODOIST_API_TOKEN=

# Optional: Enable git autocrlf for Windows hosts (default: false)
JARVIS_AUTOCRLF=false
