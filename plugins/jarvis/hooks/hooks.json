{
  "description": "Auto-Extract: passively captures observations from tool calls into Tier 2 memory",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks-handlers/post-tool-use.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
